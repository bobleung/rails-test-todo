<%= form_with(model: todo_item, class: "max-w-lg mx-auto") do |form| %>
  <% if todo_item.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="text-lg font-semibold mb-2"><%= pluralize(todo_item.errors.count, "error") %> prohibited this todo item from being saved:</h2>
      <ul class="list-disc pl-5">
        <% todo_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <% unless todo_item.is_section? %>
    <div class="mb-4">
      <%= form.label :notes, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :notes, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <div class="flex items-center">
        <%= form.check_box :completed, class: "h-5 w-5 text-blue-500 mr-2" %>
        <%= form.label :completed, class: "text-gray-700 text-sm font-bold" %>
      </div>
    </div>
  <% end %>

  <%= form.hidden_field :is_section %>

  <div class="mb-4">
    <%= form.label :order, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :order, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-700" %>
  </div>
<% end %>

<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <% if flash[:alert] %>
      <div class="mb-4 text-red-600"><%= flash[:alert] %></div>
    <% end %>
    <% if flash[:notice] %>
      <div class="mb-4 text-green-600"><%= flash[:notice] %></div>
    <% end %>
    
    <h2 class="text-2xl font-bold mb-6 text-center">Sign Up</h2>

    <%= form_with model: @user, url: registration_url, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.text_field :first_name, required: true, autofocus: true, autocomplete: "first-name", placeholder: "First name", value: params[:first_name], class: "w-full border border-gray-300 p-3 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.text_field :last_name, required: true, autofocus: true, autocomplete: "last-name", placeholder: "Last name", value: params[:last_name], class: "w-full border border-gray-300 p-3 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "w-full border border-gray-300 p-3 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter your password", maxlength: 72, class: "w-full border border-gray-300 p-3 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "w-full border border-gray-300 p-3 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.submit "Sign Up", class: "w-full bg-blue-500 hover:bg-blue-600 text-white p-3 rounded" %>
      </div>
    <% end %>
  </div>
</div>
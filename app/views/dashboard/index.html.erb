<div class="max-w-3xl mx-auto p-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">My Todo List</h1>
    <div>
      <%= link_to "New Todo", new_todo_item_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded mr-2" %>
      <%= link_to "New Section", new_section_todo_item_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded" %>
    </div>
  </div>

  <% if @todo_items.empty? %>
    <div class="text-center py-8 bg-gray-50 rounded-lg">
      <p class="text-gray-500">You don't have any todos yet. Create a new todo to get started!</p>
    </div>
  <% else %>
    <div class="space-y-3">
      <% @todo_items.each do |item| %>
        <% if item.is_section? %>
          <!-- Section -->
          <div class="flex justify-between items-center py-3 px-4 mt-6 mb-2 bg-gray-100 rounded-lg">
            <h2 class="text-xl font-bold"><%= item.name %></h2>
            <div class="flex space-x-2">
              <%= link_to "Edit", edit_todo_item_path(item), class: "text-blue-500 hover:text-blue-700" %>
              <%= button_to "Delete", todo_item_path(item), method: :delete, class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0", form: { data: { turbo_confirm: "Are you sure you want to delete this section?" } } %>
            </div>
          </div>
        <% else %>
          <!-- Regular todo item -->
          <div class="flex items-start p-3 bg-white shadow rounded hover:shadow-md transition-shadow">
            <div class="flex-shrink-0 mr-2">
              <%= form_with model: item, class: "inline" do |f| %>
                <%= f.check_box :completed, onchange: "this.form.submit()", class: "h-5 w-5 text-blue-500" %>
              <% end %>
            </div>
            <div class="flex-grow">
              <div class="flex justify-between">
                <div class="<%= 'line-through text-gray-400' if item.completed %>">
                  <%= item.name %>
                </div>
                <div class="flex space-x-2">
                  <%= link_to "Edit", edit_todo_item_path(item), class: "text-blue-500 hover:text-blue-700" %>
                  <%= button_to "Delete", todo_item_path(item), method: :delete, class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0", form: { data: { turbo_confirm: "Are you sure you want to delete this todo item?" } } %>
                </div>
              </div>
              <% if item.notes.present? %>
                <div class="text-sm text-gray-500 mt-1">
                  <%= item.notes %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
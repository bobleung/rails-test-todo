<div class="max-w-3xl mx-auto p-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">My Todo List</h1>
    <div>
      <%= link_to "New Todo", new_todo_item_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded mr-2" %>
      <%= link_to "New Section", new_section_todo_item_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded" %>
    </div>
  </div>

  <% if @standalone_todo_items.empty? && @sections.empty? %>
    <div class="text-center py-8 bg-gray-50 rounded-lg">
      <p class="text-gray-500">You don't have any todos yet. Create a new todo to get started!</p>
    </div>
  <% else %>
    <!-- Main sortable container for sections -->
    <div data-controller="sortable" 
         data-sortable-url-value="<%= reorder_todo_items_path %>"
         data-sortable-resource-name-value="todo_item"
         class="space-y-4">
      
      <!-- Sections and their todo items -->
      <% @sections.each do |section| %>
        <div data-sortable-target="item" data-id="<%= section.id %>" class="section mb-6">
          <div class="flex justify-between items-center py-3 px-4 bg-gray-100 rounded-lg">
            <div class="flex items-center">
              <div class="drag-handle mr-2">☰</div>
              <h2 class="text-xl font-bold"><%= section.name %></h2>
            </div>
            <div class="flex space-x-2">
              <%= link_to "Edit", edit_todo_item_path(section), class: "text-blue-500 hover:text-blue-700" %>
              <%= button_to "Delete", todo_item_path(section), method: :delete, class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0", form: { data: { turbo_confirm: "Are you sure you want to delete this section?" } } %>
            </div>
          </div>
          
          <!-- Nested sortable for todo items within this section -->
          <div data-controller="sortable" 
               data-sortable-url-value="<%= reorder_todo_items_path %>"
               data-sortable-resource-name-value="todo_item"
               class="pl-6 mt-2 space-y-2">
            <% Current.user.todo_items.where(is_section: false, section_id: section.id).order(:order).each do |todo_item| %>
              <div data-sortable-target="item" data-id="<%= todo_item.id %>" class="todo-item">
                <div class="flex items-start p-3 bg-white shadow rounded hover:shadow-md transition-shadow">
                  <div class="flex-shrink-0 mr-2">
                    <div class="drag-handle">☰</div>
                  </div>
                  <div class="flex-shrink-0 mr-2">
                    <%= form_with model: todo_item, class: "inline" do |f| %>
                      <%= f.check_box :completed, onchange: "this.form.submit()", class: "h-5 w-5 text-blue-500" %>
                    <% end %>
                  </div>
                  <div class="flex-grow">
                    <div class="flex justify-between">
                      <div class="<%= 'line-through text-gray-400' if todo_item.completed %>">
                        <%= todo_item.name %>
                      </div>
                      <div class="flex space-x-2">
                        <%= link_to "Edit", edit_todo_item_path(todo_item), class: "text-blue-500 hover:text-blue-700" %>
                        <%= button_to "Delete", todo_item_path(todo_item), method: :delete, class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0", form: { data: { turbo_confirm: "Are you sure you want to delete this todo item?" } } %>
                      </div>
                    </div>
                    <% if todo_item.notes.present? %>
                      <div class="text-sm text-gray-500 mt-1">
                        <%= todo_item.notes %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <!-- Standalone todo items (not in a section) -->
      <% if @standalone_todo_items.any? %>
        <div class="mt-8 mb-4">
          <h2 class="text-lg font-semibold border-b pb-2 mb-3">Other Tasks</h2>
          
          <div data-controller="sortable" 
               data-sortable-url-value="<%= reorder_todo_items_path %>"
               data-sortable-resource-name-value="todo_item"
               class="space-y-2">
            <% @standalone_todo_items.each do |todo_item| %>
              <div data-sortable-target="item" data-id="<%= todo_item.id %>" class="todo-item">
                <div class="flex items-start p-3 bg-white shadow rounded hover:shadow-md transition-shadow">
                  <div class="flex-shrink-0 mr-2">
                    <div class="drag-handle">☰</div>
                  </div>
                  <div class="flex-shrink-0 mr-2">
                    <%= form_with model: todo_item, class: "inline" do |f| %>
                      <%= f.check_box :completed, onchange: "this.form.submit()", class: "h-5 w-5 text-blue-500" %>
                    <% end %>
                  </div>
                  <div class="flex-grow">
                    <div class="flex justify-between">
                      <div class="<%= 'line-through text-gray-400' if todo_item.completed %>">
                        <%= todo_item.name %>
                      </div>
                      <div class="flex space-x-2">
                        <%= link_to "Edit", edit_todo_item_path(todo_item), class: "text-blue-500 hover:text-blue-700" %>
                        <%= button_to "Delete", todo_item_path(todo_item), method: :delete, class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0", form: { data: { turbo_confirm: "Are you sure you want to delete this todo item?" } } %>
                      </div>
                    </div>
                    <% if todo_item.notes.present? %>
                      <div class="text-sm text-gray-500 mt-1">
                        <%= todo_item.notes %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<%= form_with(model: section, class: "max-w-lg mx-auto") do |form| %>
  <% if section.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="text-lg font-semibold mb-2"><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>
      <ul class="list-disc pl-5">
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :order, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :order, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-700" %>
  </div>
<% end %>
